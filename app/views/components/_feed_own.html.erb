<% @user.tweets.each do |tweet| %>
    <% if tweet.id? %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="<%= asset_path(@user.img_url) %>" class="avatar" />
          </div>
          <div class="col-sm-11">
          <p class="post-title"><strong> <%= @user.tweetname %> </strong> <strong><%=  time_ago_in_words(@user.created_at) %> ago</strong></p>   
          <p class="post-content"><%= tweet.content %></p>
          </div>
          <div class="mt-3">
            <%= render '/components/reaction_bar' %>
          </div>
          <div>
            <%= button_to "delete", {:controller => "tweets", :action => 'destroy', :id => tweet.id, :user_id => @user.id }, :confirm => "Are you sure ?", :method => :delete %>
          </div>
          <div>
            <%= button_to "show", user_tweet_path(user_id: @user.id, id: tweet.id), :method => :get %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>