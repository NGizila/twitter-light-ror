<div class="panel panel-default">
    <div class="panel-body text-center row">
        <div class="col-sm-3">
        <img src="<%= asset_path(@user.img_url) %>" height="50px" width="50px" class="avatar" />
        </div>

        <div class="col-sm-9">
        <h3><%= @user.tweetname %></h3>
        </div>
    </div>
    <div class="panel-footer hiden-panel-body">
        <div class="row">
        <div class="col-sm-4" style="font-size:80%; opacity: 0.7;">Tweets<br>
            <h6 style="font-size:200%; opacity: 0.5;"><%= @tweet.count %></h6>
        </div>
        <div class="col-sm-4" style="font-size:80%; opacity: 0.7;">Followers<br>
            <h6  style="font-size:200%; opacity: 0.5;">
                <%= @user.followers.count %> 
            </h6>
        </div>
        <div class="col-sm-4" style="font-size:80%; opacity: 0.7;">Following<br>
            <h6  style="font-size:200%; opacity: 0.5;">
                <%= @user.following.count %> 
            </h6>
        </div>
        </div>
    </div>
</div>