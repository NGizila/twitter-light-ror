<% @user.following.each do |followed_user| %>
    <% followed_user.tweets.each do |tweet| %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="<%= asset_path(followed_user.img_url) %>" class="avatar" />
          </div>
          <div class="col-sm-11">
          <p class="post-title"><strong> <%= followed_user.tweetname %> </strong> <strong><%= time_ago_in_words(followed_user.created_at) %> ago</strong></p>   
          <p class="post-content"><%= tweet.content %></p>
          </div>
          <div class="mt-3">
            <%= render '/components/reaction_bar' %>
          </div>
          <div>
            
            <%= button_to "show", user_tweet_path(user_id: @user.id, id: tweet.id), :method => :get %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>