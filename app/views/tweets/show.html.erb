
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      
      <div class="panel panel-default">
          <div class="panel-body text-center row">
              <div class="col-sm-3">
              <img src="<%= asset_path(@user.img_url) %>" height="50px" width="50px" class="avatar" />
              </div>
              <div class="col-sm-9">
                <h3><%= User.find(@tweet.user_id).tweetname %></h3>
              </div>
          </div>
      </div>

      <div class="panel panel-default">
				<div class="panel-body text-center">
          <%= button_to 'Back', user_path(@user), :method => :get, class: "btn btn-primary" %>
				</div>
			</div>
    </div>
    
    <div class="col-xs-6">
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
              <img src="<%= asset_path(@user.img_url) %>" class="avatar" />
          </div>
          <div class="col-sm-11">
            <p class="post-title"><strong> <%= @user.tweetname %> </strong> || <strong><%= time_ago_in_words(@user.created_at) %> ago</strong></p>   
              <p class="post-content"><%= @tweet.content %></p>
          </div>  
          
          <div class="mt-3">
            <div class="col-sm-12">
                <p class="post-links">
                    <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                    <% if @tweet.user_id == @user.id %>
                      
                        <span class="glyphicon glyphicon-trash g-links" aria-hidden="true" style="color:#da1111;"></span>
                        <%= button_to "delete", 
                            {:controller => "tweets", :action => 'destroy', :id => @tweet.id, :user_id => @user.id },
                             :confirm => "Are you sure ?", :method => :delete
                      %>
                    <%end%>
                </p>
            </div>
            
            
            
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-3">
    </div>

  </div>
</div>