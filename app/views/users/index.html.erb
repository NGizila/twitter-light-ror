<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Tweetname</th>
      <th scope="col">Avatar</th>
      <th colspan="3" scope="col" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class=""><%= link_to user.tweetname, user %> </td>
        <td class="avatar"><img src="<%= asset_path(user.img_url) %>"  /></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %>
            <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
