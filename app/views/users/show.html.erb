<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <%= render '/components/profile_info' %>
      <div class="panel panel-default">
				<div class="panel-body">
					<h4> Trends </h4>
          <a href=""> #Trend #1</a><br>
          <span style="opacity: 0.7;">21k tweets</span><br><br>
          <a href=""> #Trend #2</a><br>
          <span style="opacity: 0.7;">87k tweets</span><br>
				</div>
			</div>
    </div>
    
    <div class="col-xs-6">
      <div class="row">
        <%= render "/components/post_tweet" %>
      </div>
      <div class="row mt-5">
        <div class="block">
          <h2 style="display: inline;"><input type="button" id="your_feed" value="Your feed" style="background:none; border:none;"></h2>
          <h2 style="display: inline;"> | </h2>
          <h2 style="display: inline;"><input type="button" id="followers_feed" value="Followed feed" style="background:none; border:none;"></h2>
        </div>
        <div class="mt-5">
          <%= render '/components/feed_own' %>
          <%= render '/components/feed_followed' %>
        </div>
      </div>
    </div>

    <div class="col-xs-3">
			<div class="panel panel-default">
				<div class="panel-body">
					<h4> Who to follow </h4>
					<div class="col-sm-11  mt-3">
            <% @user_list.each do |user| %>
              <%= render '/components/follow_button', :user=> user, :current_user=> @user %>
						<% end %>
					</div>
				</div>
			</div>
    </div>

  </div>
</div>

