<%= form_with model: [@user,@user.tweets.build] do |form| %>
<div class="field">
  
  <%= form.label :content %>
  <%= form.text_field :content %>
  <%= form.hidden_field :user_id, :value=>@user.id %>
</div>


<div class="actions">
  <%= form.submit %>
</div>
<% end %>

<h2>Tweets</h2>
<% @user.tweets.each do |tweet| %>
  <p>
    <strong><%= @user.tweetname %>:</strong><strong><%= @user.created_at %>:</strong>
    <%= tweet.content %>
  </p>
<% end %>



