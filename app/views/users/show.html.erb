<!DOCTYPE html>
<html>
  <head>
    <title>TwitterLight</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "http://maxcdn.bootstrapcdn.com/font-awesome/4.03.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    --> 
  </head>

  <body>
  <br><br>
      <p><%= @user.id %></p>
      <nav class="navbar is-info">
        <div class="navbar-brand">
            <%= link_to root_path, class: "navbar-item" do %>
                <h1 class="title is-5"> <%= @user.tweetname %> </h1>
            <% end %>

            <div class="navbar-burger burger" data-target="navbarExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div id="navbarExample" class="navbar-menu">
            <div class="navbar-end">
                <div class="field is-grouped">
                    <p class="control">
                        <%= link_to 'New Tweet', new_tweet_path, class: "button is-info is-inverted" %>
                    </p>
                </div>
            </div>
        </div>
    </nav>
    <div>
        <%= yield %>
    </div>
    <br>
    <div class="field">
        <h1><%= @user.id %></h1>
    </div>

    <%= form_with model: [@user,@user.tweets.build] do |form| %>
      <div class="field">
        
        <%= form.label :content %>
        <%= form.text_field :content %>
        <%= form.hidden_field :user_id, :value=>@user.id %>
      </div>


      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>

    <h2>Tweets</h2>
    <% @user.tweets.each do |tweet| %>
      <p>
        <strong><%= @user.tweetname %>:</strong><strong><%= @user.created_at %>:</strong>
        <%= tweet.content %>
      </p>
    <% end %>
  </body>
</html>




